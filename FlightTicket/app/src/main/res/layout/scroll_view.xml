<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:gravity="center_horizontal"
            android:background="#E91E63"
            android:textColor="@color/white"
            android:paddingTop="16dp"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#E91E63">


            <ImageView
                android:id="@+id/time"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/flightDeparting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLIGHT DEPARTING IN 5 DAYS"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/PNR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PNR: KY9/432776"
            android:background="#E91E63"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/FirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRST NAME"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abhay"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/LastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAST NAME"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranjan"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"/>

                <TextView
                    android:id="@+id/totalage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/GENDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"/>

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="DEL"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/departure_airport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/departure"
                android:layout_alignParentLeft="true"
                android:text="(Delhi)"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BKK"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/destination_airport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Bangkok)"
                android:layout_alignParentRight="true"
                android:layout_below="@id/destination"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/duration_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="FLIGHT DURATION" />

            <View
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/duration_level"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@id/destination_airport_name"
                android:layout_toRightOf="@id/departure_airport_name"
                android:background="#2F9FF8"/>

            <TextView
                android:id="@+id/duration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar"
                android:layout_centerHorizontal="true"

                android:gravity="center_horizontal"
                android:text="7h 45m (0 stopover)"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/airport_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/duration_time"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                 <ImageView
                     android:id="@+id/flight_takeoff"
                     android:layout_width="26dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/ic_baseline_flight_takeoff_24"/>

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:paddingLeft="16dp"
                     android:paddingRight="16dp">

                     <TextView
                          android:id="@+id/dep_airport_name"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:ellipsize="end"
                         android:maxLines="1"
                         android:text="Indra Gandhi Internation Airport, Delhi"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Monday, 18th March"
                         android:textStyle="bold"/>

                 </LinearLayout>

                 <ImageButton
                     android:id="@+id/airport_map"
                     style="@style/Widget.AppCompat.Button.Borderless"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_baseline_location_on_24"/>

            </LinearLayout>

            <TextView
                android:id="@+id/departure_time_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/airport_container"
                android:layout_alignParentLeft="true"
                android:text="DEPARTURE TIME" />

            <TextView
                android:id="@+id/departure_terminal_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/airport_container"
                android:layout_centerHorizontal="true"
                android:text="TERMINAL" />

            <TextView
                android:id="@+id/departure_gate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="GATE"
                android:layout_below="@id/airport_container"/>

            <TextView
                android:id="@+id/departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/departure_time_level"
                android:text="11:35 Am"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T3"
                android:layout_below="@id/departure_terminal_level"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/terminal_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/departure_gate_label"
                android:layout_alignParentRight="true"
                android:text="10A"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/flight_Seat_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/terminal_level"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEAT" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11B"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLIGHT NO" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:text="KY 12"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sharp_filter_vintage_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="KOYON"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faclity_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_below="@id/flight_Seat_details"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/wifi"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_wifi_24"/>
                <ImageView
                    android:id="@+id/food"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_coffee_24"/>

                <ImageView
                    android:id="@+id/power"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_power_24"/>

                <ImageView
                    android:id="@+id/luggage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_work_24"/>

                <TextView
                    android:id="@+id/luggage_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 pc(14kg)"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/more_facility_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    android:textColor="#E91E63"
                    style="@style/Widget.AppCompat.Button.Borderless"
                   />

            </LinearLayout>

            <TextView
                android:id="@+id/total_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/faclity_info_container"
                android:layout_alignParentRight="true"
                android:text="INR 7811.0"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_fare_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL FARE"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/total_fare"
                android:layout_below="@id/faclity_info_container"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/important_info_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Important Information:"
            android:textStyle="bold"
            android:paddingLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/for_the_entire_duration_of_the_flight_passengers_must_ensure_hygiene_and_sanitization_and_should_minimise_face_to_face_interaction_they_should_attempt_to_minimise_the_use_of_the_lavatory_and_any_non_essential_movement_must_be_avoided"/>

    </LinearLayout>


</ScrollView>